@using AdminLTE.MVC.Contants
@using static AdminLTE.MVC.Helpers.NavigationIndicatorHelper;
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">AdminLTE 3</span>
    </a>
    <div class="sidebar">
@if (User.Identity.IsAuthenticated)
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="image">
            <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
        </div>
        <div class="info">
            <a href="#" class="d-block">Hi, @User.Identity.Name </a>
        </div>
    </div>
}
else
{
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
        <div class="info">
            <a href="#" class="d-block">Hi, Visitor</a>
        </div>
    </div>
}
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item ">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("Home","index")">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            Home
                        </p>
                    </a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item ">
                        <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("Home","privacy")">
                            <i class="nav-icon fas fa-lock"></i>
                            <p>
                                Privacy
                            </p>
                        </a>
                    </li>
                    
                    @if (User.IsInRole(Roles.SuperAdmin.ToString()))
                    {
                        <li class="nav-item ">
                            <a asp-controller="Users" asp-action="Index" class="nav-link @Url.MakeActiveClass("users","index")">
                                <i class="nav-icon fas fa-lock"></i>
                                <p>
                                    Manage Users
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a asp-controller="Roles" asp-action="Index" class="nav-link @Url.MakeActiveClass("roles","index")">
                                <i class="nav-icon fas fa-lock"></i>
                                <p>
                                    Manage Roles
                                </p>
                            </a>
                        </li>


                  

                    }

                    @if (User.IsInRole(Roles.Admin.ToString()))
                    {
                        <li class="nav-item ">
                            <a asp-controller="StagiaireStages" asp-action="Index" class="nav-link @Url.MakeActiveClass("StagiaireStages","index")">
                                <i class="nav-icon fas fa-lock"></i>
                                <p>
                                    Stagiaires
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a asp-controller="Specialites" asp-action="Index" class="nav-link @Url.MakeActiveClass("Specialites","index")">
                                <i class="nav-icon fas fa-lock"></i>
                                <p>
                                    Specialités
                                </p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a asp-controller="Stages" asp-action="Index" class="nav-link @Url.MakeActiveClass("Stages","index")">
                                <i class="nav-icon fas fa-lock"></i>
                                <p>
                                    Stage
                                </p>
                            </a>
                        </li>
                         <li class="nav-item ">
                            <a asp-controller="Phases" asp-action="Index" class="nav-link @Url.MakeActiveClass("Phases","index")">
                                <i class="nav-icon fas fa-lock"></i>
                                <p>
                                    Phases
                                </p>
                            </a>
                        </li>
                    }
                }
               
            </ul>
        </nav>
    </div>
</aside>